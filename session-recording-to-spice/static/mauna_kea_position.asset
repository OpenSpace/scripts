local Kernels = {
    asset.localResource("mauna_kea.bsp"),
}

local pos = {
    Identifier = "MaunaKeaPoition",
    Parent = "Earth",
    Transform = {
        Translation = {
            Type = "SpiceTranslation",
            Target = "399701",
            Observer = "EARTH",
            Frame = "IAU_EARTH"
        }
    },
    Renderable = {
        Type = "RenderableBoxGrid",
        Size = {500,100,500},
        Color = {1,1,0}
    },
    GUI = {
        Path = "/SS7",
        Name = "Mauna Kea Position"
    }
}

asset.onInitialize(function()
    openspace.spice.loadKernel(Kernels)
    openspace.addSceneGraphNode(pos)
end)

asset.onDeinitialize(function()
    openspace.removeSceneGraphNode(pos)
    openspace.spice.unloadKernel(Kernels)
end)
